<div class="d-flex justify-content-center align-items-center">
    <h1>Users</h1>
</div>
<table class = "table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Description</th>
            <th scope="col">Social media</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <% @users.each do |user| %>
        <tr>
            <td> <%= user.id %> </td>
            <td> <%= user.first_name + " " + user.last_name %> </td>
            <td> <%= user.email %> </td>
            <td> <%= user.description %> </td>
            <td> <%= link_to user.social_media, user.social_media %></td>
            <td>
                <%= link_to "Edit", edit_path(id: user) %>
                <%= link_to "Delete", delete_path(id: user), method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
    <% end %> 
</table>
