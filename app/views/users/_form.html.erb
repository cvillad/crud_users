<%= simple_form_for @user, html: {class: "form"} do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
            <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>
    <div class="mb-3">
        <%= form.input :first_name, input_html: {class: "form-control"}, placeholder: "first name" %>
    </div>
    <div class="mb-3">
        <%= form.input :last_name, input_html: {class: "form-control"}, placeholder: "last name" %>
    </div>
    <div class="form-group mb-3">
        <%= form.input :email, input_html: {class: "form-control"}, placeholder: "someone@example.com" %>
    </div>
    <div class="form-group mb-3">
        <%= form.input :description, input_html: {class: "form-control"}, placeholder: "description" %>
    </div>
    <%= form.label :image %>
    <div class="custom-file mb-3">
        <% if @user.errors[:image].empty? && @user.image.attached? %>
            <%= link_to user_image_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
            <br/>
            <%= image_tag @user.image.variant(:profile), class: "mt-1 mb-2" %>
        <% end %>
        <%= form.input :image, as: :file, label: false, input_html: {class: "custom-file-input", id: "file", accept: "image/jpeg, image/png"} %>
        <label class="custom-file-label" for="file">Choose file</label>
    </div>
    <div class="d-flex align-items-center mb-3">
        <p style="font-weight: bold; margin: auto auto 5px 0px"> Social networks </p>
        <%= link_to_add_association form, :social_networks, form_name: "form", class: "btn btn-sm btn-outline-success", data: {
            association_insertion_node: ".social-networks",
            association_insertion_method: :append} do %>
            <i class="fa fa-plus" aria-hidden="true"></i>
        <% end %>
    </div>
    <div class="form-group mb-3">
        <table class="table table-borderless">
            <tbody class="social-networks">
                <%= form.simple_fields_for :social_networks do |builder| %>
                    <%= render "social_network_fields", form: builder %>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="mb-3">
        <%= form.submit class: "btn btn-dark" %>
    </div>
<% end %>