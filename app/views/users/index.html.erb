
<div class="container"> 
    <div class="d-flex justify-content-center align-items-center mt-3">
        <h1>Users</h1>
    </div>
    <table class = "table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Description</th>
                <th scope="col"> </th>
            </tr>
        </thead>
        <% @users.each do |user| %>
            <tr>
                <td> <%= user.first_name + " " + user.last_name %> </td>
                <td> <%= user.email %> </td>
                <td> <%= user.description %> </td>
                <td class="d-flex justify-content-evenly">
                    <%= button_to user, method: :get, class: "btn btn-sm btn-dark" do %>
                        <i class="fa fa-id-card" aria-hidden="true"></i>
                    <% end %>
                    <%= button_to edit_user_path(id: user), method: :get, class: "btn btn-warning btn-sm" do %>
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <% end %>
                    <%= button_to user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" do %>
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                    <% end %>
                </td>
            </tr>
        <% end %> 
    </table>
    <%= button_to "Create", new_user_path, method: :get, class: "btn btn-success" %>
</div>

