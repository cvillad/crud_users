<div class="container d-flex flex-column align-items-center">
  <div class="card mt-3" style="min-width: 40%;">
    <div class="card-header">
        <h4 class="card-title"> <%= "#{@user.first_name} #{@user.last_name}" %> </h4>
    </div>
    <div class="card-body">
      <% if @user.image.attached? %>
        <%= link_to url_for(@user.image), target: :_blank do %>
          <%= image_tag @user.image.variant(:profile), class: "mb-4" %>
        <% end %>
      <% else %>
        <%= image_tag "default", width: 150, height: 150, class: "mb-4" %>
      <% end %>
      <p> <%= "Email: #{@user.email}"%> <p>
      <p class="card-text"><%= "Description: #{@user.description}" %></p>

      <%= render "social_networks", social_networks: @user.social_networks %>

      <% if current_user==@user %>
        <div class="mt-3 d-flex justify-content-end">
          <%= link_to edit_user_registration_path, method: :get, class: "btn btn-warning" do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <% end %>
          <%= link_to user_registration_path, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger", style: "margin-left: 5px" do %> 
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <small>Joined <%= time_ago_in_words(@user.created_at) %> ago</small>
    </div>
  </div>
  
</div>