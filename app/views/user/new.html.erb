<div class="d-flex justify-content-center align-items-center">
    <h1>Create user</h1>
</div>
<div class="container">
    <%= form_with model: @user, url: create_path do |form| %>
        <% if @user.errors.any? %>
            <div class="alert alert-danger">
                <% @user.errors.full_messages.each do |message| %>
                <div> <%= message %> </div>
                <% end %>
            </div>
        <% end %>
        <div class="mb-3">
            <%= form.label :first_name %>
            <%= form.text_field :first_name, class: "form-control", placeholder: "first name" %>
        </div>
        <div class="mb-3">
            <%= form.label :last_name %>
            <%= form.text_field :last_name, class: "form-control", placeholder: "last name" %>
        </div>
        <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control", placeholder: "someone@example.com" %>
        </div>
        <div class="mb-3">
            <%= form.label :description %>
            <%= form.text_field :description, class: "form-control", placeholder: "description" %>
        </div>
        <div class="mb-3">
            <%= form.label :social_media %>
            <%= form.text_field :social_media, class: "form-control", placeholder: "social media" %>
        </div>
        <div class="mb-3">
            <%= form.label :password %>
            <%= form.password_field :password, class: "form-control", placeholder: "password" %>
        </div>
        <div class="mb-3">
            <%= form.submit class: "btn btn-primary" %>
        </div>

    <% end %>
</div>