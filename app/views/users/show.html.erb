<div class="container d-flex flex-column align-items-center">
  <div class="card mt-3" style="min-width: 40%;">
    <div class="card-header">
        <h4 class="card-title"> <%= "#{@user.first_name} #{@user.last_name}" %> </h4>
    </div>
    <div class="card-body">
      <% if @user.image.attached? %>
        <%= link_to url_for(@user.image), target: :_blank do %>
          <%= image_tag @user.image.variant(:profile), class: "mb-4" if @user.image.attached? %>
        <% end %>
      <% end %>
      <p> <%= "Email: #{@user.email}"%> <p>
      <p class="card-text"><%= "Description: #{@user.description}" %></p>
      <div class="d-flex align-items-center mb-3">
        <% @user.social_networks.each do |social_network| %>
          <%= link_to social_network.link, class: "mx-1", target: :_blank do %>
            <% case social_network.name %>
              <% when "Facebook" %>
                <i class="fa fa-facebook-square fa-2x" aria-hidden="true"></i>
              <% when "Twitter" %>
                <i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i>
              <% when "Instagram" %>
                <i class="fa fa-instagram fa-2x" aria-hidden="true"></i>
              <% when "Linkedin" %>
                <i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <% if current_user==@user %>
        <div class="mt-3 d-flex justify-content-end">
          <%= link_to edit_user_path(@user), method: :get, class: "btn btn-warning" do %>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <% end %>
          <%= link_to @user, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger", style: "margin-left: 5px" do %> 
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <small>Joined <%= time_ago_in_words(@user.created_at) %> ago</small>
    </div>
  </div>
  
</div>