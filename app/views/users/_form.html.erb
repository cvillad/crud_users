<%= form_with model: @user, class: "w-50" do |form| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
            <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>
    <div class="mb-3">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control", placeholder: "first name" %>
    </div>
    <div class="mb-3">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control", placeholder: "last name" %>
    </div>
    <div class="form-group mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "someone@example.com" %>
    </div>
    <div class="form-group mb-3">
        <%= form.label :description %>
        <%= form.text_field :description, class: "form-control", placeholder: "description" %>
    </div>
    <div class="form-group mb-3">
        <%= form.label :image %>
        <% if @user.errors[:image].empty? && @user.image.attached? %>
            <%= link_to user_image_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" do %>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
            <br/>
            <%= image_tag @user.image.variant(:profile), class: "mt-1 mb-2" %>
        <% end %>
        <%= form.file_field :image, accept: "image/jpeg, image/png",class: "form-control" %>
    </div>
    <% unless @user.id.nil? %>
        <%= render partial: "users/social_networks" %>
    <% end %> 
    <div class="mb-3">
        <%= form.submit class: "btn btn-dark" %>
    </div>
<% end %>